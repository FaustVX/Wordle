{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Wordle.App/Wordle.App.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "focus": true,
                "close": true,
            },
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Wordle.App/Wordle.App.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--configuration",
                "${input:Configuration}"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Wordle.App/Wordle.App.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "7Zip",
            "type": "shell",
            "command": "\"C:\\Program Files\\7-Zip\\7z.exe\" a -t7z -mx9 Wordle.7z *.exe *.dll *.json *.pdb",
            "dependsOn": "publish",
            "options": {
                "cwd": "${workspaceFolder}/Wordle.App/bin/${input:Configuration}/net6.0/publish"
            },
            "problemMatcher": [],
            "presentation": {
                "focus": true,
                "close": true,
            },
        },
    ],
    "inputs": [
        {
            "id": "Configuration",
            "type": "pickString",
            "description": "Build Configuration",
            "options": [
                "Release",
                "Debug",
            ],
        },
    ],
}